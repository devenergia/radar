# =============================================================================
# PROJETO RADAR - Roraima Energia
# Arquivo de exemplo de variaveis de ambiente
# Copie este arquivo para .env e preencha com os valores reais
# NUNCA commite o arquivo .env no repositorio!
# =============================================================================
# IMPORTANTE: As variaveis da API usam prefixo RADAR_
# =============================================================================

# -----------------------------------------------------------------------------
# AMBIENTE (prefixo RADAR_)
# -----------------------------------------------------------------------------
# Valores: development, staging, production
RADAR_ENVIRONMENT=development
RADAR_APP_NAME=radar-api
RADAR_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# SERVIDOR (prefixo RADAR_)
# -----------------------------------------------------------------------------
RADAR_HOST=0.0.0.0
RADAR_PORT=8000
RADAR_WORKERS=4
RADAR_DEBUG=true

# =============================================================================
# BANCO DE DADOS ORACLE (prefixo RADAR_)
# =============================================================================
# Variaveis usadas pela classe Settings da API
RADAR_DB_USER=radar_api
RADAR_DB_PASSWORD=sua_senha_aqui
RADAR_DB_CONNECTION_STRING=localhost:1521/RADARDB
RADAR_DB_POOL_MIN=2
RADAR_DB_POOL_MAX=10
RADAR_DB_POOL_INCREMENT=1
RADAR_DB_POOL_TIMEOUT=60

# -----------------------------------------------------------------------------
# AUTENTICACAO (prefixo RADAR_)
# -----------------------------------------------------------------------------
# Chave API para autenticacao da ANEEL
# Gere uma chave segura: python -c "import secrets; print(secrets.token_urlsafe(32))"
RADAR_API_KEY=sua_chave_api_aqui

# -----------------------------------------------------------------------------
# WHITELIST DE IPs (prefixo RADAR_)
# -----------------------------------------------------------------------------
# IPs da ANEEL autorizados a consultar a API
# Use * para permitir todos (apenas em desenvolvimento)
RADAR_ALLOWED_IPS=*

# -----------------------------------------------------------------------------
# LOGS (prefixo RADAR_)
# -----------------------------------------------------------------------------
RADAR_LOG_LEVEL=INFO
RADAR_LOG_FORMAT=json

# -----------------------------------------------------------------------------
# CACHE (prefixo RADAR_)
# -----------------------------------------------------------------------------
RADAR_CACHE_TTL_SECONDS=300
RADAR_CACHE_STALE_TTL_SECONDS=3600
RADAR_CACHE_MAX_ITEMS=1000

# -----------------------------------------------------------------------------
# METRICAS E MONITORAMENTO (prefixo RADAR_)
# -----------------------------------------------------------------------------
RADAR_METRICS_ENABLED=true

# -----------------------------------------------------------------------------
# CORS (prefixo RADAR_)
# -----------------------------------------------------------------------------
RADAR_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# EMAIL PARA INDISPONIBILIDADE (prefixo RADAR_)
# -----------------------------------------------------------------------------
RADAR_EMAIL_INDISPONIBILIDADE=radar@roraimaenergia.com.br
