# =============================================================================
# PROJETO RADAR - Roraima Energia
# Arquivo de exemplo de variaveis de ambiente
# Copie este arquivo para .env e preencha com os valores reais
# NUNCA commite o arquivo .env no repositorio!
# =============================================================================
# IMPORTANTE: As variaveis da API usam prefixo PRD_RADAR_
# =============================================================================

# -----------------------------------------------------------------------------
# AMBIENTE
# -----------------------------------------------------------------------------
# Valores: development, staging, production
PRD_RADAR_ENVIRONMENT=development
PRD_RADAR_APP_NAME=radar-api
PRD_RADAR_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# SERVIDOR
# -----------------------------------------------------------------------------
PRD_RADAR_HOST=0.0.0.0
PRD_RADAR_PORT=8000
PRD_RADAR_WORKERS=4
PRD_RADAR_DEBUG=true

# =============================================================================
# BANCO DE DADOS ORACLE
# =============================================================================
# DSN no formato: //host:porta/service_name
PRD_RADAR_ORACLE_DSN=//cn-dbrcomp:1568/AJUBVPD
PRD_RADAR_ORACLE_USER=RADAR
PRD_RADAR_ORACLE_PASSWORD=sua_senha_aqui
PRD_RADAR_ORACLE_SCHEMA=RADAR

# Pool de conexoes
PRD_RADAR_POOL_MIN=2
PRD_RADAR_POOL_MAX=10
PRD_RADAR_POOL_INCREMENT=1
PRD_RADAR_POOL_TIMEOUT=60

# -----------------------------------------------------------------------------
# AUTENTICACAO
# -----------------------------------------------------------------------------
# Chave API para autenticacao da ANEEL
# Gere uma chave segura: python -c "import secrets; print(secrets.token_urlsafe(32))"
PRD_RADAR_API_KEY=sua_chave_api_aqui

# -----------------------------------------------------------------------------
# WHITELIST DE IPs
# -----------------------------------------------------------------------------
# IPs da ANEEL autorizados a consultar a API
# Use * para permitir todos (apenas em desenvolvimento)
PRD_RADAR_ALLOWED_IPS=*

# -----------------------------------------------------------------------------
# LOGS
# -----------------------------------------------------------------------------
PRD_RADAR_LOG_LEVEL=INFO
PRD_RADAR_LOG_FORMAT=json

# -----------------------------------------------------------------------------
# CACHE
# -----------------------------------------------------------------------------
PRD_RADAR_CACHE_TTL_SECONDS=300
PRD_RADAR_CACHE_STALE_TTL_SECONDS=3600
PRD_RADAR_CACHE_MAX_ITEMS=1000

# -----------------------------------------------------------------------------
# METRICAS E MONITORAMENTO
# -----------------------------------------------------------------------------
PRD_RADAR_METRICS_ENABLED=true

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
PRD_RADAR_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# EMAIL PARA INDISPONIBILIDADE
# -----------------------------------------------------------------------------
PRD_RADAR_EMAIL_INDISPONIBILIDADE=radar@roraimaenergia.com.br
